@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["Action"] = "Login";
}

<div>

    <div class="login">
        <h1>Login to Web App</h1>

        <form method="post">
            @if (@Model.Message != null)
            {
                <p class="text-danger">Message: @Model.Message</p>
            }

            <div asp-validation-summary="ModelOnly"></div>
            <label>Username</label>
            <p>
                <input asp-for="UserLogin.UserName" placeholder="Username">
                <span asp-validation-for="UserLogin.UserName" class="text-danger"></span>
            </p>
            <div asp-validation-summary="ModelOnly"></div>
            <label>Password</label>
            <p>
                <input asp-for="UserLogin.password" placeholder="Password">
                <span asp-validation-for="UserLogin.password" class="text-danger"></span>
            </p>
            <p class="remember_me">
                <label>
                    <input type="checkbox" name="remember_me" id="remember_me">
                    Remember me on this computer
                </label>
            </p>
            <p class="submit"><input type="submit" asp-page-handler="UserLogin" value="Login"></p>
            <hr />
            <p>Don't have account <a asp-area="" asp-page="/Register">Register</a>.</p>

        </form>

    </div>

</div>
